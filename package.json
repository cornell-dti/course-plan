{
  "name": "vue-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "serve:build": "serve --listen 8080 --single dist",
    "ts-node": "ts-node -T -P tsconfig.node.json",
    "courses-gen": "npm run ts-node -- src/requirements/courses-json-generator.ts",
    "req-gen": "npm run ts-node -- src/requirements/requirement-json-generator.ts",
    "req-graph-dump": "npm run ts-node -- src/requirements/admin/requirement-graph-dumper.ts",
    "track-users": "npm run ts-node -- src/requirements/admin/track-users.ts",
    "lint": "eslint . --cache",
    "tsc": "tsc",
    "type-check": "vue-tsc --noEmit",
    "build:staging": "vite build --mode staging",
    "format": "prettier --write \"**/*.{js,ts,css,scss,html,vue}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,scss,html,vue}\"",
    "test": "jest",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:e2e": "npm run build:dev && concurrently \"npm run serve:build\" \"wait-on http-get://localhost:8080 && npm run cypress:run\" --kill-others --success first"
  },
  "dependencies": {
    "@cypress/vue": "^4.1.0",
    "@firebase/analytics": "^0.8.0",
    "@types/intro.js": "^5.1.0",
    "bootstrap": "^5.2.0",
    "bootstrap-vue": "^2.22.0",
    "core-js": "^3.25.0",
    "cypress-axe": "^1.0.0",
    "cypress-firebase": "^2.2.2",
    "firebase": "^9.9.3",
    "firebase-admin": "^11.0.1",
    "fuse.js": "^6.6.2",
    "intro.js": "^6.0.0",
    "node-fetch": "^3.2.10",
    "vue": "^3.2.37",
    "vue-gtag-next": "^1.14.0",
    "vue-router": "^4.1.4",
    "vue2-collapse": "^1.0.15",
    "vuedraggable": "^4.0.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^28.1.8",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vitejs/plugin-vue": "^3.0.3",
    "@vue/eslint-config-typescript": "^11.0.0",
    "autoprefixer": "^10.4.8",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.0.0",
    "concurrently": "^7.3.0",
    "cypress": "^10.6.0",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^9.4.0",
    "jest": "^29.0.0",
    "prettier": "2.7.1",
    "sass": "^1.54.5",
    "sass-loader": "^13.0.2",
    "serve": "^14.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vue-tsc": "^0.40.1",
    "wait-on": "^6.0.1"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "license": "AGPL-3.0"
}
