{
  "name": "courseplan",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vite",
    "build": "vite build --mode production",
    "build:dev": "vite build --mode development",
    "serve:build": "serve --listen 8080 --single dist",
    "ts-node": "ts-node -T -P tsconfig.node.json",
    "courses-gen": "npm run ts-node -- src/requirements/courses-json-generator.ts",
    "req-gen": "npm run ts-node -- src/requirements/requirement-json-generator.ts",
    "req-graph-dump": "npm run ts-node -- src/requirements/admin/requirement-graph-dumper.ts",
    "track-users": "npm run ts-node -- src/requirements/admin/track-users.ts",
    "lint": "eslint . --cache",
    "tsc": "tsc",
    "type-check": "vue-tsc --noEmit",
    "build:staging": "vite build --mode staging",
    "format": "prettier --write \"**/*.{js,ts,css,scss,html,vue}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,scss,html,vue}\"",
    "test": "jest",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:e2e": "npm run build:dev && concurrently \"npm run serve:build\" \"wait-on http-get://localhost:8080 && npm run cypress:run\" --kill-others --success first"
  },
  "dependencies": {
    "@types/intro.js": "^3.0.0",
    "bootstrap": "^4.6.0",
    "bootstrap-vue": "^2.22.0",
    "core-js": "^3.6.5",
    "cypress-axe": "^0.14.0",
    "cypress-firebase": "^2.2.2",
    "esbuild": "^0.15.5",
    "firebase": "^9.9.3",
    "firebase-admin": "^11.0.1",
    "intro.js": "^3.3.1",
    "node-fetch": "^2.6.7",
    "vue": "^3.2.19",
    "vue-gtag-next": "^1.14.0",
    "vue-router": "^4.0.6",
    "vuedraggable": "^4.0.0",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.21",
    "@types/node-fetch": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-vue": "^1.9.0",
    "@vue/eslint-config-typescript": "^9.0.1",
    "autoprefixer": "10.4.5",
    "babel-jest": "^26.6.3",
    "concurrently": "^6.0.2",
    "cypress": "^6.6.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-vue": "^8.0.3",
    "jest": "^26.6.3",
    "prettier": "2.2.1",
    "sass": "^1.42.1",
    "sass-loader": "^8.0.2",
    "serve": "^12.0.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "vite": "^2.6.14",
    "vue-tsc": "^0.3.0",
    "wait-on": "^5.3.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "license": "AGPL-3.0"
}
