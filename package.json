{
  "name": "vue-app",
  "version": "0.1.0",
  "private": true,
  "license": "AGPL-3.0",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build --mode production",
    "fetch-courses": "ts-node -T -P tsconfig.node.json src/requirements/fetcher.ts",
    "courses-gen": "ts-node -T -P tsconfig.node.json src/requirements/courses-json-generator.ts",
    "req-gen": "ts-node -T -P tsconfig.node.json src/requirements/requirement-json-generator.ts",
    "lint": "vue-cli-service lint",
    "tsc": "tsc",
    "type-check": "tsc && vti diagnostics",
    "build:staging": "vue-cli-service build --mode staging",
    "format": "prettier --write \"**/*.{js,ts,css,scss,html,vue}\"",
    "format:check": "prettier --check \"**/*.{js,ts,css,scss,html,vue}\"",
    "format:check:full": "prettier --check \"**/*.{js,ts,vue,scss,css,html}\"",
    "test": "jest"
  },
  "dependencies": {
    "@firebase/analytics": "^0.6.6",
    "@types/intro.js": "^3.0.0",
    "bootstrap": "^4.6.0",
    "bootstrap-vue": "^2.21.2",
    "firebase": "^8.3.1",
    "intro.js": "^3.3.1",
    "node-fetch": "^2.6.1",
    "skeleton-loader-vue": "^1.0.8",
    "vue": "^2.6.12",
    "vue-gtag": "^1.11.0",
    "vue-router": "^3.5.1",
    "vue2-collapse": "^1.0.15",
    "vuedraggable": "^2.24.3",
    "vuex": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.12",
    "@babel/preset-typescript": "^7.13.0",
    "@types/jest": "^26.0.21",
    "@types/node-fetch": "^2.5.8",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@vue/cli-plugin-eslint": "^4.5.12",
    "@vue/cli-plugin-typescript": "^4.5.12",
    "@vue/cli-service": "^4.5.12",
    "@vue/eslint-config-airbnb": "^5.3.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-vue": "^7.8.0",
    "jest": "^26.6.3",
    "node-sass": "^4.13.1",
    "prettier": "2.2.1",
    "sass-loader": "^8.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5",
    "vti": "0.0.24",
    "vue-template-compiler": "^2.6.12"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
